	//	alert("第一地点と第二地点の時間は" + response.routes[0].legs[0].duration.value / 60 + "分かかります");
	//	alert(response.routes[0].legs[1]);
   directionsDisplay.setDirections(response);}
	 alert(status);
   });
 }
</script>
